@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="AddBook" class="btn btn-primary">Add New Book</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Available</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.Category</td>
                <td>@item.IsAvailable</td>
                <td>
                    <a asp-action="EditBook" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="DeleteBook" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
