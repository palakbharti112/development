@model LibraryManagementSystem.Models.BorrowRecord

@{
    ViewData["Title"] = "Return Book";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UpdateBorrowRecord">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReturnedAt"></label>
        <input asp-for="ReturnedAt" class="form-control" />
        <span asp-validation-for="ReturnedAt" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Return</button>
</form>
